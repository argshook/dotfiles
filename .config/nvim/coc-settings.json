{
  "tsserver.log": "verbose",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "float",
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualText": true,
  "suggest.minTriggerInputLength": 2,
  "list.previewSplitRight": true,
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "coc.preferences.formatOnSave": true,
  "eslint.format.enable": true,
  "coc.preferences.enableMarkdown": true,
  "suggest.noselect": true,
  "tsserver.tsdk": "~/.config/coc/extensions/node_modules/coc-tsserver/node_modules/typescript/lib",
  "colors.enable": true,
  "workspace.rootPatterns": [
    ".git"
  ],
  "tailwindCSS.includeLanguages": {
    "astro": "html"
  },
  "tailwindCSS.headwind.runOnSave": true,
  "tailwindCSS.headwind.removeDuplicates": true,
  "tailwindCSS.headwind.prependCustomClasses": true
}
