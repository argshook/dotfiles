site '*://*.reddit.com/*' {
  unmap j
  unmap k
  unmap x
  unmap [
  unmap ]
  unmap [[
  unmap ]]
  unmap a
  unmap z
  unmap 9
  unmap 0
}

site '*://*.github.com/*' {
  unmap t
  unmap w
}

site '*://*.mail.google.com/*' {
  unmap j
  unmap k
  unmap e
  unmap x
}

